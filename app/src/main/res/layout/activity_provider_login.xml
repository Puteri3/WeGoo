<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:id="@+id/imgProviderLogo"
        android:layout_width="186dp"
        android:layout_height="121dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="Provider Logo"
        android:src="@drawable/provider_logo" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="MSN LEGACY ADMIN LOGIN"
        android:textColor="#00D1FF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputProviderEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Admin Email"
        android:textColorHint="#757575"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textColor="#000000"
        android:backgroundTint="#00D1FF" />

    <EditText
        android:id="@+id/inputProviderPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="Password"
        android:textColorHint="#757575"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="#000000"
        android:backgroundTint="#00D1FF" />

    <Button
        android:id="@+id/btnProviderLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#00D1FF"
        android:text="@string/log_in"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvBackToUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Not an admin? Go back to user login"
        android:textColor="#00D1FF"
        android:textSize="14sp" />
</LinearLayout>
