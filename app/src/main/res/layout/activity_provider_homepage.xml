<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF3FF"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:src="@drawable/provider_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="Provider Logo" />

        <!-- Dashboard Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:text="Provider Dashboard"
            android:textSize="22sp"
            android:textColor="#0A58CA"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Profile Card -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvProviderName"
                android:text="Provider Name: John Doe"
                android:textColor="#1E1E1E"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvProviderEmail"
                android:text="Email: johndoe@example.com"
                android:textColor="#555"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnProfileSettings"
                android:text="Profile Settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#0A58CA"
                android:textColor="#FFFFFF"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:layout_gravity="end"/>
        </LinearLayout>

        <!-- RecyclerView for Vehicles -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewVehicles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Dashboard Buttons -->
        <Button
            android:id="@+id/btnUpdate"
            android:text="Update / Manage Vehicle"
            android:backgroundTint="#0A58CA"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnHistory"
            android:text="View History"
            android:backgroundTint="#0A58CA"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnCustomers"
            android:text="List of Customers"
            android:backgroundTint="#0A58CA"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/btnOpenCV"
            android:text="OpenCV Damage Detection"
            android:backgroundTint="#0A58CA"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>