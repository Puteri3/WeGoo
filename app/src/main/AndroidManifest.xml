<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SelectedPhotoAccess">

    <!-- ✅ Features -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!-- ✅ Core permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- ✅ Storage permissions for different Android versions -->
    <!-- Android 13 (API 33) and above -->
    <uses-permission
        android:name="android.permission.READ_MEDIA_IMAGES"
        android:required="false" />

    <!-- Android 12 and below -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeGoo"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        tools:targetApi="33">

        <!-- ✅ Entry point -->
        <activity
            android:name=".OnboardingActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ Auth-related activities -->
        <activity android:name=".LoginActivity" android:exported="false" android:configChanges="orientation|screenSize"/>
        <activity android:name=".UserSignUpActivity" android:exported="false" android:configChanges="orientation|screenSize"/>
        <activity android:name=".ProviderLoginActivity" android:exported="false" android:configChanges="orientation|screenSize"/>
        <activity android:name=".ForgotPasswordActivity" android:exported="false" android:configChanges="orientation|screenSize"/>

        <!-- ✅ User section -->
        <activity android:name=".HomeActivity" android:exported="false" android:configChanges="orientation|screenSize"/>
        <activity android:name=".UserHomepageActivity" android:exported="false" android:configChanges="orientation|screenSize"/>
        <activity android:name=".BookingActivity" android:exported="false" android:configChanges="orientation|screenSize"/>
        <activity android:name=".UserProfileActivity" android:exported="false" android:configChanges="orientation|screenSize"/>
        <activity android:name=".AboutUsActivity" android:exported="false" android:configChanges="orientation|screenSize"/>
<!--        <activity android:name=".ContactProviderActivity" android:exported="false" android:configChanges="orientation|screenSize"/>-->
        <activity android:name=".CompareTableActivity" android:exported="false" android:configChanges="orientation|screenSize"/>
        <activity android:name=".UserHistoryActivity" android:exported="false" android:configChanges="orientation|screenSize" android:theme="@style/Theme.AppCompat.Light"/>
        <activity
            android:name=".PaymentActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false" />
        <activity android:name=".BookingSuccessActivity" android:exported="false" android:configChanges="orientation|screenSize"/>


        <!-- ✅ Provider section -->
        <activity android:name=".ProviderHomepageActivity" android:exported="false" android:configChanges="orientation|screenSize"/>
        <activity android:name=".CustomerListActivity" android:exported="false" android:configChanges="orientation|screenSize"/>
        <activity android:name=".ProviderProfileSettingsActivity" android:exported="false" android:configChanges="orientation|screenSize"/>
        <activity android:name=".ProviderVehicleListActivity" android:exported="false" android:configChanges="orientation|screenSize"/>
		<activity android:name=".ProviderHistoryActivity" android:exported="false" android:configChanges="orientation|screenSize"/>

        <!-- ✅ Vehicle-related -->
        <activity
            android:name=".UpdateVehicleActivity"
            android:exported="false"
            android:label="Update Vehicle"
            android:configChanges="orientation|screenSize"/>

        <!-- ===================== Vehicle-related Activities ===================== -->



       <!-- <activity
            android:name=".DeleteVehicleActivity"
            android:exported="false"
            android:label="Delete Vehicle"
            android:configChanges="orientation|screenSize"/>-->


        <activity
            android:name=".HistoryActivity"
            android:exported="false"
            android:label="History"
            android:configChanges="orientation|screenSize"/>

        <!-- ✅ OpenCV related -->
        <activity
            android:name=".OpenCVDetectionActivity"
            android:exported="true"
            android:label="OpenCV Detection"
            android:configChanges="orientation|screenSize"/>

        <activity
            android:name=".CameraTestActivity"
            android:exported="true"
            android:label="OpenCV Camera Test"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:configChanges="orientation|screenSize"/>

    </application>

</manifest>
