<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qualification"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_qualification"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp" />

        <!-- SPM Form Section -->
        <LinearLayout
            android:id="@+id/layout_spm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Candidate Type (for GAPP)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <Spinner
                android:id="@+id/spinner_candidate_type"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SPM Grades"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"/>

            <!-- Subject: BM -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bahasa Melayu"/>
            <Spinner android:id="@+id/spinner_spm_bm" android:layout_width="match_parent" android:layout_height="48dp"/>

            <!-- Subject: Sejarah -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sejarah"/>
            <Spinner android:id="@+id/spinner_spm_sejarah" android:layout_width="match_parent" android:layout_height="48dp"/>

            <!-- Subject: English -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="English"/>
            <Spinner android:id="@+id/spinner_spm_english" android:layout_width="match_parent" android:layout_height="48dp"/>

            <!-- Subject: Math -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mathematics"/>
            <Spinner android:id="@+id/spinner_spm_math" android:layout_width="match_parent" android:layout_height="48dp"/>

            <!-- Subject: Add Math -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Additional Mathematics"/>
            <Spinner android:id="@+id/spinner_spm_add_math" android:layout_width="match_parent" android:layout_height="48dp"/>

            <!-- Subject: Physics -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Physics"/>
            <Spinner android:id="@+id/spinner_spm_physics" android:layout_width="match_parent" android:layout_height="48dp"/>

            <!-- Subject: Chemistry -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Chemistry"/>
            <Spinner android:id="@+id/spinner_spm_chemistry" android:layout_width="match_parent" android:layout_height="48dp"/>
            
            <!-- Subject: Science -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Science (if no Physics/Chem)"/>
            <Spinner android:id="@+id/spinner_spm_science" android:layout_width="match_parent" android:layout_height="48dp"/>

        </LinearLayout>

        <!-- Non-SPM Form Section -->
        <LinearLayout
            android:id="@+id/layout_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Results Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CGPA (for Diploma/SKM/STPM)"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_cgpa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Enter CGPA (e.g. 3.00)"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Math Score / Grade"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_math"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Enter Score (1-100) or Grade"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Science Score / Grade"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_science"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Enter Score (1-100) or Grade"
                android:layout_marginBottom="24dp" />
                
        </LinearLayout>

        <Button
            android:id="@+id/btn_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Eligibility"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/blue"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>